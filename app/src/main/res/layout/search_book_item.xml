<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:padding="7dp"
        android:layout_width="match_parent"
        android:id="@+id/rl"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_bookImage"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_toRightOf="@id/iv_black"
            />
        <TextView
            android:id="@+id/tv_bookTiele"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="书名"
            android:textSize="18sp"
            android:layout_toRightOf="@id/iv_bookImage"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/tv_personName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_bookImage"
            android:gravity="center_vertical"
            android:layout_below="@id/tv_bookOriginTitle"
            android:padding="5dp"
            android:text="作者"
            />

        <TextView
            android:id="@+id/tv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_bookImage"
            android:gravity="center_vertical"
            android:layout_below="@id/tv_personName"
            android:text="出版时间"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/tv_bookOriginTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_bookTiele"
            android:layout_toRightOf="@+id/iv_bookImage"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="原名" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_year"
            android:layout_toRightOf="@id/iv_bookImage"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="5dp"
            android:text="评分"
            />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/MovieRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_year"
            android:layout_toRightOf="@id/tv_number"
            android:layout_margin="7dp"
            android:numStars="5"
            android:layout_gravity="center"
            />
    </RelativeLayout>


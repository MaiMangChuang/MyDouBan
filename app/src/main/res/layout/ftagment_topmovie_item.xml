<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:paddingTop="6dp"
    android:paddingLeft="8dp"
    android:paddingRight="10dp"
    android:background="@drawable/setting_item_selector"
    android:clickable="true"
    >
    <TextView
        android:layout_width="28dp"
        android:layout_height="wrap_content"
        android:text="排名"
        android:textColor="#F14C53"
        android:textSize="18sp"
        android:padding="0dp"
        android:layout_centerVertical="true"
        android:id="@+id/tv_number"
        android:gravity="center"
        />
<ImageView
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:id="@+id/iv_movieImages"
    android:layout_toRightOf="@id/tv_number"
    android:scaleType="fitCenter"
    />
<TextView
    android:paddingTop="3dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="17sp"
    android:textColor="@color/colorPrimary"
    android:text="电影名称"
    android:ellipsize="end"
    android:layout_marginLeft="5dp"
    android:maxWidth="150dp"
    android:maxLines="1"
    android:layout_toRightOf="@id/iv_movieImages"
    android:id="@+id/tv_movieTiele"
    />

    <TextView
        android:id="@+id/tv_movieTytpe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:paddingTop="3dp"
        android:text="电影类型"
        android:ellipsize="end"
        android:maxLength="6"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#000000"
        android:text="主演姓名"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/tv_movieTiele"
        android:layout_alignLeft="@id/tv_movieTiele"
        android:id="@+id/tv_movieActor"
        android:maxWidth="160dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#F14C53"
        android:text="分数"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/tv_movieTytpe"
       android:layout_alignParentRight="true"
        android:id="@+id/tv_movieGrade"
        />
<TextView
    style="@style/line_style"
    android:paddingBottom="2dp"
    />

</RelativeLayout>
